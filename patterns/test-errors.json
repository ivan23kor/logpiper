{
  "patterns": [
    {
      "name": "jest_test_failure",
      "pattern": "(?:FAIL.*\\.test\\.|‚óè .*|expect\\(.*\\).*received)",
      "severity": "high",
      "category": "test_failure",
      "description": "Jest test failure",
      "suggestedFix": "Review failing test assertions and fix test logic",
      "cooldownMs": 10000,
      "commands": ["npm", "yarn", "jest"]
    },
    {
      "name": "mocha_test_failure",
      "pattern": "(?:\\d+\\) .*|failing|Error:.*at.*test)",
      "severity": "high",
      "category": "test_failure",
      "description": "Mocha test failure",
      "suggestedFix": "Check test assertions and expected vs actual values",
      "cooldownMs": 10000,
      "commands": ["npm", "yarn", "mocha"]
    },
    {
      "name": "cypress_test_failure",
      "pattern": "(?:CypressError|AssertionError.*expected|Test failed.*cypress)",
      "severity": "high",
      "category": "test_failure",
      "description": "Cypress E2E test failure",
      "suggestedFix": "Review Cypress test selectors and assertions",
      "cooldownMs": 15000,
      "commands": ["npm", "yarn", "cypress"]
    },
    {
      "name": "playwright_test_failure",
      "pattern": "(?:Test failed.*playwright|expect.*toBe.*received|Error:.*playwright)",
      "severity": "high",
      "category": "test_failure", 
      "description": "Playwright test failure",
      "suggestedFix": "Check Playwright selectors and test expectations",
      "cooldownMs": 15000,
      "commands": ["npm", "yarn", "playwright"]
    },
    {
      "name": "vitest_failure",
      "pattern": "(?:FAIL.*\\.test\\.|AssertionError.*vitest|Test failed.*vi\\.)",
      "severity": "high",
      "category": "test_failure",
      "description": "Vitest test failure",
      "suggestedFix": "Review Vitest assertions and mock implementations",
      "cooldownMs": 10000,
      "commands": ["npm", "yarn", "vitest"]
    },
    {
      "name": "coverage_threshold_failure",
      "pattern": "(?:Coverage threshold.*not met|Insufficient coverage)",
      "severity": "medium",
      "category": "test_failure",
      "description": "Code coverage threshold not met",
      "suggestedFix": "Add tests to increase code coverage",
      "cooldownMs": 30000,
      "commands": ["npm", "yarn", "jest", "vitest"]
    },
    {
      "name": "test_timeout",
      "pattern": "(?:Test timeout|Timeout.*exceeded.*test|async callback was not invoked)",
      "severity": "high",
      "category": "test_failure",
      "description": "Test execution timeout",
      "suggestedFix": "Increase test timeout or fix async operations",
      "cooldownMs": 20000,
      "commands": ["npm", "yarn", "jest", "mocha", "vitest"]
    }
  ]
}